<link rel="stylesheet " href="css/posts_style.css">

{{#each post}}

<p>{{this.title}}</p>
<p>{{this.content}};</p>
<p>by {{this.username}}</p>
<p>likes {{this.likes}}</p>

{{#if ../canlike}}
<button class="btn btn-primary" onclick="location.href='/like?id={{this.id}}'">{{../likeBtn}}</button>
{{/if }}

{{/each}}